{
    "compilerOptions": {
        "module": "es2015",
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "target": "es5",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "inlineSources": false,
        "lib": ["es2015", "dom"],
        "alwaysStrict": true,
    },
    "include": [
        "src/**/*.ts",
        // "./mapbox-gl-dev.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],

    "typedocOptions": {}
}